generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
model User {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String   @unique
  password      String?
  phoneNumber          String
  role          Role     @default(farmer) 
  createdAt     DateTime @default(now())

  // Relation to farmer profile (only for farmers)
  farmer        Farmer?
}

// 2. Farmers table: stores farm details + certification status
model Farmer {
  id                Int      @id @default(autoincrement())
  userId            Int      @unique
  user              User     @relation(fields: [userId], references: [id])
  farmSize          Float    
  cropType          String   
  certificationStatus CertificationStatus @default(pending)
  appliedAt         DateTime @default(now())
}

// Enums for type safety
enum Role {
  farmer
  admin
}

enum CertificationStatus {
  pending
  certified
  declined
}